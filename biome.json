{
  "files": {
    "ignore": [
      "dist",
      "tests",
      "migrations",
      "src/client/components/ui",
      "src/client/hooks",
      "docs/build",
      "docs/.docusaurus",
      "docs/node_modules"
    ]
  },
  "javascript": {
    "formatter": {
      "indentStyle": "space",
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  },
  "organizeImports": {
    "enabled": false
  },
  "overrides": [
    {
      "include": ["docs/src/**/*.tsx", "docs/src/**/*.ts"],
      "linter": {
        "rules": {
          "style": {
            "useImportType": "off"
          }
        }
      }
    }
  ]
}
