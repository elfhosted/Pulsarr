{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "build",
    "target": "es2018",
    "lib": ["es2018"],
    "baseUrl": ".",
    "paths": {
      "@root/*": ["../*"],
      "@db/*": ["db/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"],
      "@plex/*": ["plex/*"],
      "@shared/*": ["shared/*"],
      "@data/*": ["data/*"]
    }
  }
}